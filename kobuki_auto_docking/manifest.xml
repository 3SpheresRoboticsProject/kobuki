<package>
  <description brief="Automatic docking for Kobuki">

     Users owning a docking station for Kobuki can use this tool to let Kobuki find its nest autonomously.

  </description>
  <author>Younghun Ju</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/kobuki_auto_docking</url>
  
  <depend package="roscpp"/>
  <depend package="rospy"/>
  <depend package="nodelet"/>
  <depend package="message_filters"/>
  <depend package="actionlib"/>
  <depend package="kdl_conversions"/>

  <depend package="std_msgs"/>
  <depend package="nav_msgs"/>  
  <depend package="geometry_msgs"/>
  <depend package="kobuki_msgs"/>  
  <depend package="actionlib_msgs"/>

  <depend package="ecl_threads"/>
  <depend package="ecl_geometry"/>
  <depend package="ecl_linear_algebra"/>

  <export>
    <nodelet plugin="${prefix}/plugins/nodelet_plugins.xml" />
  </export>
</package>



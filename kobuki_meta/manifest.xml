<package>
  <description brief="Meta package for the Kobuki Bot">

    The meta package for the kobuki stack
     
  </description>
  <author>Younghun Ju</author>
  <license>Yujin</license>
  <review status="unreviewed" notes=""/>
  <url>http://www.ros.org/wiki/kobuki/kobuki_meta</url>

  <depend package="cruizcore"/>
  <depend package="kobuki_node"/>
  <depend package="diff_drive_base"/>
  <depend package="diff_drive_gyro_base"/>

  <depend package="keyop_core"/>
  <depend package="joyop_core"/>
  <depend package="robot_state_publisher"/>
  <depend package="joint_state_publisher"/>

  <!-- kinect -->
  <depend package="openni_launch"/>
  <depend package="pointcloud_to_laserscan"/>

  <!-- hokuyo -->
  <depend package="hokuyo_node"/>

  <!-- navigation -->
  <depends package="navigation"/>
  <depends package="gmapping"/>

  <!-- visualization -->
  <depend package="rviz"/>

  <!-- applications -->
<!--  <depend package="kobuki_panorama"/> -->
<!--  <depend package="kobuki_photo"/> -->
  <depend package="kobuki_controller"/>
  <depend package="remote_mutex"/>

<!--
  Typical options for a ycs-ros cpp style package providing headers/libs in the example below

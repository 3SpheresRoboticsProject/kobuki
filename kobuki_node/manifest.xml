<package>
  <description brief="ROS node for Kobuki">
  <p>
     ROS wrapper for Kobuki driver
  </p>
  </description>
  <author>Younghun Ju</author>
  <license>Yujin</license>
  <review status="unreviewed" notes=""/>
  <url>http://www.ros.org/wiki/kobuki/kobuki_node/</url>
  
  <!-- Ros -->
  <depend package="roscpp"/>
  <depend package="nodelet"/>
  <depend package="geometry_msgs"/>
  <depend package="sensor_msgs"/>
  <depend package="nav_msgs"/>
  <depend package="tf"/>

  <!--  Kobuki -->
  <depend package="kobuki_comms"/>
  <depend package="kobuki_driver"/>
  
  <!-- Ycs -->
  <depend package="device_nodelet"/>
  <depend package="device_comms"/>
<!--   <depend package="standard_comms"/> -->
  
  <!-- Ecl -->
  <depend package="ecl_exceptions"/>
  <depend package="ecl_sigslots"/>
  <depend package="ecl_streams"/>
  <export>
    <nodelet plugin="${prefix}/src/nodelets/kobuki_nodelet.xml"/>
  </export>
</package>

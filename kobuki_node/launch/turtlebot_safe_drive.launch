<launch>
  <arg name="kobuki_nodelet_manager"/>
  <node pkg="nodelet" type="nodelet" name="kobuki_safety_controller" args="load kobuki_safety_controller/SafetyControllerNodelet $(arg kobuki_nodelet_manager)">
    <remap from="kobuki_safety_controller/cmd_vel" to="cmd_vel"/>
    <remap from="kobuki_safety_controller/events/bumper" to="kobuki_node/events/bumper"/>
    <remap from="kobuki_safety_controller/events/cliff" to="kobuki_node/events/cliff"/>
    <remap from="kobuki_safety_controller/events/wheel_drop" to="kobuki_node/events/wheel_drop"/>
  </node>
</launch>
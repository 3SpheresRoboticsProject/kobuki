<!--
  The mobile platform base - nodelet version.
  
  We use this to move kobuki driver public topics/services out from their 
  private namespace (maybe should do that in kobuki_node itself?)
 -->
<launch>
  <node pkg="nodelet" type="nodelet" name="kobuki_nodelet_manager"  args="manager"/>
  <node pkg="nodelet" type="nodelet" name="kobuki_node" args="load kobuki_node/KobukiNodelet kobuki_nodelet_manager">
    <rosparam file="$(find kobuki_node)/param/base.yaml" command="load"/>
    <remap from="kobuki_node/odom" to="odom"/>
    <remap from="kobuki_node/cmd_vel" to="cmd_vel"/>
    <remap from="kobuki_node/enable" to="enable"/>
    <remap from="kobuki_node/disable" to="disable"/>
    <remap from="kobuki_node/joint_states" to="joint_states"/>
  </node>
  <node pkg="nodelet" type="nodelet" name="kobuki_safety_controller" args="load kobuki_safety_controller/SafetyControllerNodelet kobuki_nodelet_manager">
    <remap from="kobuki_safety_controller/cmd_vel" to="cmd_vel"/>
    <remap from="kobuki_safety_controller/events/bumper" to="kobuki_node/events/bumper"/>
    <remap from="kobuki_safety_controller/events/cliff" to="kobuki_node/events/cliff"/>
    <remap from="kobuki_safety_controller/events/wheel_drop" to="kobuki_node/events/wheel_drop"/>
  </node>
</launch>